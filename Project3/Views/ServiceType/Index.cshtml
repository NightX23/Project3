@model IEnumerable<Project3.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Manage Service Types</h2>
<hr />

<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create new</a>
    </p>
    <br />
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(m =>m.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(m=>item.Name)
                </td>
                <td>
                    @Html.Partial("_tableButtonPartial",new IndividualButtonPartial { ServiceId = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
